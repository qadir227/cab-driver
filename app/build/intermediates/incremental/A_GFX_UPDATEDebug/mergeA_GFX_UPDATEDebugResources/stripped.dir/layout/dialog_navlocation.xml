<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/dialog_style"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <View
       android:background="@drawable/n_appbackground"
       android:layout_width="0dp"
       android:layout_height="0dp"
       android:layout_alignLeft="@+id/actualcontent"
       android:layout_alignRight="@id/actualcontent"
       android:layout_alignTop="@id/actualcontent"
       android:layout_alignBottom="@id/actualcontent"/>
    
	<LinearLayout 
	    android:id="@+id/actualcontent"
	    android:orientation="vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingTop="@dimen/dialog_horizontal_padding"
	    android:paddingBottom="@dimen/dialog_horizontal_padding"
	    android:paddingLeft="@dimen/dialog_vertical_padding"
	    android:paddingRight="@dimen/dialog_vertical_padding">
	    
	            <ImageButton
		  	    android:id="@+id/dlg_btnBack"
		    	android:background="@drawable/layout_listitem"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
		      	android:src="@drawable/n_icoback"
					android:tint="@color/colorPrimary"
		      	android:layout_width="@dimen/back_ico"
		      	android:layout_height="@dimen/back_ico"
		      	android:scaleType="centerInside"
		      	android:layout_gravity="left"/>    
	    
	
	        	<fragment
	        	    android:layout_width="wrap_content"
	        	    android:layout_height="wrap_content"
	        	    class="com.cabdespatch.driverapp.beta.fragments.settings.DefaultNavLocation"
	        	    tools:layout="@layout/fragment_settings_navlocation"/>
	        	
	        		          <ImageButton
						          android:id="@+id/dlg_btnOk"
						          android:layout_gravity="right"
						          android:layout_width="@dimen/yesno_ico_width"
					     		  android:layout_height="@dimen/yesno_ico_height"
						          android:scaleType="centerInside"
						          android:background="@drawable/layout_listitem"
						          android:src="@drawable/n_icoyes"/>

	
	</LinearLayout>
</RelativeLayout>