<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Root"
	tools:background="@drawable/n_appbackground"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent">
        
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    
        <View 
            android:background="@color/colorPrimaryDark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignLeft="@+id/actualcontent"
            android:layout_alignRight="@id/actualcontent"
            android:layout_alignTop="@id/actualcontent"
            android:layout_alignBottom="@id/actualcontent"/>
        
    	    <LinearLayout
    	        style="@style/YellowInner"
    	        android:id="@+id/actualcontent"
    	        android:layout_width="fill_parent"
    	        android:layout_height="wrap_content"
    	        android:orientation="vertical" >
	        
		        <!-- GPS Status-->
	
				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginBottom="@dimen/activity_vertical_margin"
				    android:orientation="horizontal">
				    
				    <ImageView
				        android:id="@+id/launcher_icoGPSState"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:src="@drawable/n_icogps"/>
				    
		              <TextView
		                android:id="@+id/launcher_lblGPS"
		                style="@style/YellowItemText"
		                android:layout_width="0dp"
		                android:layout_weight="1"
		                android:layout_height="wrap_content"
		                android:text="hello"/>
		              
		              <ImageButton
		                  android:id="@+id/launcher_btnGPS_Staus"
		                  android:onClick="btnGPS_Click"
		                  android:background="@drawable/layout_listitem"
		                  android:layout_width="@dimen/launcher_ico"
						  android:tint="@color/Black"
		                  android:layout_height="match_parent"
		                  android:scaleType="centerInside"
		                  android:src="@drawable/n_icosettings_small"/>
	              
	              
	              
	              </LinearLayout>
			        
		         <!-- WiFi Status-->
		         
		         <LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    
				    <ImageView
				        android:id="@+id/launcher_icoNetState"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:src="@drawable/n_icowifi"/>
				    
	              	<TextView
		                android:id="@+id/launcher_lblNetwork"
		                style="@style/YellowItemText"
		                android:layout_width="0dp"
			            android:layout_weight="1"
			            android:layout_height="wrap_content"
		                android:text="hello"/>

	              <ImageButton
	                  	android:id="@+id/launcher_btnWiFi_Staus"
	                  	android:onClick="btnWifi_Click"
					  	android:tint="@color/Black"
	                  	android:background="@drawable/layout_listitem"
		                android:layout_width="@dimen/launcher_ico"
		                android:layout_height="match_parent"
		                android:scaleType="centerInside"
		                android:src="@drawable/n_icosettings_small"/>
	              
	              
	              </LinearLayout>

        	
	        </LinearLayout>
	        
    	    </RelativeLayout>

	    <ScrollView
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent">
	        
	<LinearLayout
	    android:orientation="vertical"
	    android:paddingBottom="@dimen/activity_vertical_margin"
    	android:paddingLeft="@dimen/activity_horizontal_margin"
    	android:paddingRight="@dimen/activity_horizontal_margin"
    	android:paddingTop="@dimen/activity_vertical_margin"
	    android:layout_width="fill_parent"
	    android:layout_height="match_parent">

		<!-- Set Company ID - Dev Mode Only -->
		<LinearLayout
			android:visibility="gone"
			tools:visibility="visible"
			android:paddingTop="@dimen/activity_vertical_margin"
			android:paddingBottom="@dimen/activity_vertical_margin"
			android:id="@+id/launcher_btnSetCompanyId"
			android:onClick="btnSetCompany_Click"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:background="@drawable/layout_listitem">

			<ImageView
				android:clickable="false"
				android:background="@null"
				android:src="@null"
				android:duplicateParentState="true"
				android:layout_width="@dimen/launcher_ico"
				android:layout_height="@dimen/launcher_ico"/>

			<TextView
				android:layout_width="0dp"
				android:layout_weight="1"
				android:layout_height="fill_parent"
				android:gravity="center_vertical"
				android:duplicateParentState="true"
				android:maxLines="1"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:text="Change"
				android:textSize="@dimen/launcher_item_text"
				android:layout_marginLeft="6dip"/>

			<TextView
				android:id="@+id/lblCurrentCompanyId"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:gravity="bottom"
				android:duplicateParentState="true"
				android:maxLines="1"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				tools:text="THT100"
				android:layout_marginLeft="6dip"/>

		</LinearLayout>
        	
	        <!-- Launch Cab Despatch -->
	        <LinearLayout
	          android:paddingTop="@dimen/activity_vertical_margin"
	          android:paddingBottom="@dimen/activity_vertical_margin"
              android:id="@+id/launcher_btnLaunchCabDespatch"
              android:onClick="btnLaunch_Click"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:background="@drawable/layout_listitem">

              <ImageView
                  android:clickable="false"
              	  android:background="@null"
              	  android:src="@drawable/big_icon"
                  android:duplicateParentState="true"
              	  android:layout_width="@dimen/launcher_ico"
              	  android:layout_height="@dimen/launcher_ico"/>

	              <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="fill_parent"
	                android:gravity="center_vertical"
                    android:duplicateParentState="true"
	                android:maxLines="1"
	                android:paddingLeft="@dimen/activity_horizontal_margin"
	                android:text="@string/launch_cabdespatch"
	                android:textSize="@dimen/launcher_item_text"
	                android:layout_marginLeft="6dip"/>

        	</LinearLayout>
        	
	        <!-- Navigate -->
	        <LinearLayout
	            android:paddingTop="@dimen/activity_vertical_margin"
	          android:paddingBottom="@dimen/activity_vertical_margin"
              android:id="@+id/launcher_btnNavigate"
              android:onClick="btnNavigate_Click"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:clickable="true"
              android:background="@drawable/layout_listitem">

              <ImageView
				  android:duplicateParentState="true"
                  android:clickable="false"
              	  android:background="@null"
              	  android:src="@drawable/n_iconavigate"
				  android:tint="@color/button_tint_enabled"
              	  android:layout_width="@dimen/launcher_ico"
              	  android:layout_height="@dimen/launcher_ico"/>

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="Navigate"
                android:textSize="@dimen/launcher_item_text"
                android:layout_marginLeft="6dip"/>

        	</LinearLayout>
        	
	        <!-- Manage Apps -->
	        <LinearLayout
	          android:paddingTop="@dimen/activity_vertical_margin"
	          android:paddingBottom="@dimen/activity_vertical_margin"
              android:id="@+id/launcher_btnManageApps"
              android:onClick="btnManageApps_Click"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:clickable="true"
              android:visibility="gone"
			  tools:visibility="visible"
              android:background="@drawable/layout_listitem">

              <ImageView
                  android:clickable="false"              
              	  android:background="@null"
				  android:tint="@color/button_tint_enabled"
              	  android:src="@drawable/n_icomanageapps"
              	  android:layout_width="@dimen/launcher_ico"
              	  android:layout_height="@dimen/launcher_ico"/>

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="Manage Apps"
                android:textSize="@dimen/launcher_item_text"
                android:layout_marginLeft="6dip"/>

        	</LinearLayout>
        	
	             <!-- Phone Dialler -->
	        <LinearLayout
	            android:paddingTop="@dimen/activity_vertical_margin"
	          android:paddingBottom="@dimen/activity_vertical_margin"
              android:id="@+id/launcher_btnDialPhone"
              android:onClick="btnPhoneDialler_Click"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:clickable="true"
              android:visibility="gone"
				tools:visibility="visible"
              android:background="@drawable/layout_listitem">

              <ImageView
                  android:clickable="false"              
              	  android:background="@null"
              	  android:src="@drawable/n_icocall"
				  android:tint="@color/button_tint_enabled"
              	  android:layout_width="@dimen/launcher_ico"
              	  android:layout_height="@dimen/launcher_ico"/>
              
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:text="Make a Call"
                android:textSize="@dimen/launcher_item_text"
                android:layout_marginLeft="6dip"/>

        	</LinearLayout>

		<!-- Launch Cab Despatch -->
		<LinearLayout
			android:paddingTop="@dimen/activity_vertical_margin"
			android:paddingBottom="@dimen/activity_vertical_margin"
			android:id="@+id/launcher_btnTest"
			android:visibility="gone"
			tools:visibility="visible"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:background="@drawable/layout_listitem">

			<ImageView
				android:clickable="false"
				android:background="@null"
				android:src="@drawable/n_icoplay"
				android:duplicateParentState="true"
				android:layout_width="@dimen/launcher_ico"
				android:layout_height="@dimen/launcher_ico"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				android:gravity="center_vertical"
				android:duplicateParentState="true"
				android:maxLines="1"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:text="TEST ITEM"
				android:textSize="@dimen/launcher_item_text"
				android:layout_marginLeft="6dip"/>

		</LinearLayout>

	    </LinearLayout>
	    
	    </ScrollView>
	   
	</LinearLayout>

    <TextView
        android:id="@+id/launcher_lblVersionNumber"
        android:text="version_number"
        android:paddingBottom="@dimen/bab_margin_horizontal"
        android:paddingRight="@dimen/bab_margin_vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:background="@color/TransparentBlack"
        android:id="@+id/layMenu"
        android:visibility="invisible"
        tools:visibility="invisible"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/overlay_menuu_outline"
            android:paddingTop="@dimen/overlay_menuu_outline"
            android:paddingLeft="@dimen/overlay_menuu_outline"
            android:paddingRight="@dimen/overlay_menuu_outline"
            android:background="@color/overlay_menu_outline"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <Button
                android:onClick="overlayMenuItemSelected"
                android:background="@drawable/menu_overlay_item"
                android:textSize="@dimen/overlay_menu_item_text"
                android:ems="10"
                android:id="@+id/menu_option_manager_mode"
                android:text="@string/menu_item_manager_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/overlay_menuu_outline"/>

            <Button
                android:onClick="overlayMenuItemSelected"
                android:textSize="@dimen/overlay_menu_item_text"
                android:background="@drawable/menu_overlay_item"
                android:ems="10"
                android:id="@+id/menu_option_engineer_mode"
                android:text="@string/menu_item_engineer_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        </RelativeLayout>

    <FrameLayout
        android:background="@color/TransparentBlack"
        android:id="@+id/dlg_container"
        android:visibility="gone"
        tools:visibility="invisible"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
</RelativeLayout>