<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AutoPlot" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Exit"
            android:onClick="btnExit_Click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:text="Lock"
            android:onClick="btnLock_Click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:text="new activity"
            android:onClick="btnActivity_Click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    
    <TextView
        android:id="@+id/autoplot_info"
        android:textColor="@color/Black"
        android:layout_marginBottom="12dip"
        android:textSize="18sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
    <EditText
        android:id="@+id/autoplot_lat"
        android:inputType="numberSigned|numberDecimal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="lat"/>
    
    <EditText
        android:id="@+id/autoplot_lon"
        android:inputType="numberSigned|numberDecimal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="lon"/>
    
    <Button 
        android:id="@+id/autoplot_btnPlot"
        android:onClick="autoPlotClick"
        android:text="plot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">
        
        <TextView
            android:id="@+id/autoplot_allplots"
            android:textColor="@color/Black"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
        
        </ScrollView>
    
    <Button 
        android:id="@+id/autoplot_btnPlotSQL"
        android:onClick="plotSQLClick"
        android:text="Generate Plot SQL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"/>

    <Button
        android:id="@+id/autoplot_btnPlotSQLSpecial"
        android:onClick="plotSQLSpecialClick"
        android:text="Generate Plot SQL From zone.cfg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"/>

</LinearLayout>