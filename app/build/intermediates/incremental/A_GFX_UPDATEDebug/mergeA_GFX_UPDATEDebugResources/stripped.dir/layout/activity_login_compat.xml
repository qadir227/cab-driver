<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                style="@style/Root"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                tools:background="@drawable/n_appbackground">
<LinearLayout
    android:id="@+id/frmStart_base"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.cabdespatch.driverapp.beta.fragments.StatusBar"
        android:id="@+id/status_bar_login"
        tools:layout="@layout/fragment_statusbar" />

    <!-- main viewport -->
 <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="@dimen/activity_vertical_margin"
    	android:paddingLeft="@dimen/activity_horizontal_margin"
    	android:paddingRight="@dimen/activity_horizontal_margin"
    	android:paddingTop="@dimen/activity_vertical_margin">
    

    <ScrollView
        android:id="@+id/frmStart_Scroller"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clickable="true"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="12dip" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:orientation="horizontal" >

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"/>
                
                <ImageView
                    android:id="@+id/frmStart_Logo"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:layout_height="wrap_content"
                    android:scaleType="centerInside"
                    android:src="@drawable/mobilesplashscreenwide" />
            </LinearLayout>

            <TableLayout
                android:id="@+id/frmStart_layoutPinLogin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="2dip"
                android:paddingRight="2dip"
                android:visibility="gone" >

                <TableRow>

                    <!-- android:imeOptions="flagNoExtractUi" -->

                    <TextView
                        android:id="@+id/frmStart_lblDrivereNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="Driver:"
                        android:textSize="@dimen/pinlogin_label"/>

                    <EditText
                        android:id="@+id/frmStart_txtDriverNo"
                        android:background="@drawable/ice_cream_edit"
                        android:textColor="@color/NavajoWhite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="...driver number"
                        android:inputType="number"
                        android:textSize="@dimen/pinlogin_prompt" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/frmStart_lblVehicleNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="Vehicle:"
                        android:textSize="@dimen/pinlogin_label" />

                    <EditText
                        android:id="@+id/frmStart_txtVehicleNo"
                        android:background="@drawable/ice_cream_edit"
                        android:textColor="@color/NavajoWhite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="...vehicle number"
                        android:inputType="number"
                        android:textSize="@dimen/pinlogin_prompt" />
                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/frmStart_lblPinNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:text="Pin:"
                        android:textSize="@dimen/pinlogin_label" />

                    <EditText
                        android:id="@+id/frmStart_txtPinNo"
                        android:background="@drawable/ice_cream_edit"
                        android:textColor="@color/NavajoWhite"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="...pin number"
                        android:inputType="number"
                        android:textSize="@dimen/pinlogin_prompt" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/frmStart_lblInfo"
                    tools:text="This is some\n\nText that\nPreviews stuff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dip" />
            </LinearLayout>


            <Space
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/layPaymentPrompt"
                android:visibility="gone"
                tools:visibility="visible"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Circuit Balance: "
                    android:textSize="20dp"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    tools:text="Â£520"
                    android:id="@+id/lblCircuitBalance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <ImageButton
                android:id="@+id/frmStart_btnMenu"
                android:layout_height="@dimen/action_ico"
                android:layout_width="@dimen/action_ico"
                android:scaleType="centerInside"                
                android:background="@drawable/layout_listitem"
                android:src="@drawable/n_icomenu" />
    
    <ImageView
        android:id="@+id/frmStart_demoOverlay"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/demo_overlay"/>
    
</RelativeLayout>

     <!-- button bar -->

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
        
	    <View
            android:background="@color/colorPrimaryDark"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignLeft="@+id/actualcontent"
            android:layout_alignRight="@id/actualcontent"
            android:layout_alignTop="@id/actualcontent"
            android:layout_alignBottom="@id/actualcontent"/>

    <LinearLayout
        android:id="@+id/actualcontent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <ImageButton
                android:id="@+id/frmStart_btnExit"
                android:layout_gravity="right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:layout_height="@dimen/action_ico"
                android:background="@drawable/layout_listitem"
                android:src="@drawable/n_icoexit"
                android:visibility="invisible" />

            

            <ImageButton
                android:id="@+id/frmStart_btnLogin"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitEnd"
                android:layout_height="@dimen/action_ico"
                android:layout_marginEnd="@dimen/dialog_vertical_margin"
                android:background="@drawable/layout_listitem"
                android:maxLines="1"
                android:src="@drawable/n_icologin"
                android:visibility="gone" />

        <ProgressBar
            android:id="@+id/frmStart_prgLogin"
            android:layout_marginEnd="@dimen/dialog_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>




    </LinearLayout>
    
    </RelativeLayout>
 
</LinearLayout>

    <LinearLayout
        android:visibility="gone"
        tools:visibility="invisible"
        android:background="@color/TransparentBlack"
        android:id="@+id/menuBackground"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </LinearLayout>

</RelativeLayout>