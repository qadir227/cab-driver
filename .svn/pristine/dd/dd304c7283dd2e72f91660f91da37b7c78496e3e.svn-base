<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities2017.DriverPaymentActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layDisplayPayment"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_gravity="right"
                android:layout_width="@dimen/back_ico"
                android:layout_height="@dimen/back_ico"
                android:background="@drawable/layout_listitem"
                app:tint="@color/colorPrimary"
                android:src="@drawable/n_icoback" />

            <TextView
                android:text="@string/title_driver_payment"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textSize="@dimen/activity_title"/>

        </LinearLayout>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/lblBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dialog_subtitle"
                tools:text="You are in credit by: "/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="12dp">

                <LinearLayout
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btnPaymentOption0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/select_button"
                        android:text="Pay" />
                </LinearLayout>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:id="@+id/btnPaymentOption1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/select_button"
                        android:text="Pay" />

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="1dp" />

                    <Button
                        android:id="@+id/btnPaymentOption2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/select_button"
                        android:text="Pay" />
                </LinearLayout>

                <Space
                    android:layout_width="1dp"
                    android:layout_height="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnPaymentOption3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/select_button"
                        android:text="Pay" />

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="1dp" />

                    <Button
                        android:id="@+id/btnPaymentOption4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/select_button"
                        android:text="Pay" />
                </LinearLayout>

                <!-- Add more rows using LinearLayout and Space as needed -->

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_vertical_margin"/>

            <Space
                android:layout_width="12dp"
                android:layout_height="24dp" />

            <Button
                android:id="@+id/btnPay"
                android:textSize="@dimen/large_button_text"
                android:layout_width="match_parent"
                style="@style/Yellow_Button"
                android:layout_gravity="right"
                android:text="Pay"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5" />


        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/layProgress"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="@color/transparent_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>