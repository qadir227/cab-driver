<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/Root"
                xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                tools:context="com.cabdespatch.driverapp.beta.activities.POD">

    <LinearLayout
        tools:background="@drawable/n_appbackground"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <View
                android:background="@drawable/n_yellow_rounded"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignLeft="@+id/actualcontent"
                android:layout_alignRight="@id/actualcontent"
                android:layout_alignTop="@id/actualcontent"
                android:layout_alignBottom="@id/actualcontent"/>

            <LinearLayout
                android:id="@+id/actualcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/layPOD_lblAccountNo"
                    tools:text="Account No: "
                    android:textSize="@dimen/pod_label"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/layPOD_lblJobID"
                    tools:text="Job ID: "
                    android:textSize="@dimen/pod_label"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.cabdespatch.driverapp.beta.views.CaptureSignatureView
                android:id="@+id/layPOD_sig"
                android:background="@color/Black"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageButton
                android:id="@+id/layPOD_btnClear"
                android:layout_width="@dimen/yesno_ico_width"
                android:layout_height="@dimen/yesno_ico_height"
                android:layout_gravity="right"
                android:scaleType="centerInside"
                android:background="@drawable/layout_listitem"
                android:src="@drawable/n_icono"/>

        </RelativeLayout>


        <ImageButton
            android:id="@+id/layPOD_btnOk"
            android:layout_width="@dimen/yesno_ico_width"
            android:layout_height="@dimen/yesno_ico_height"
            android:layout_gravity="right"
            android:scaleType="centerInside"
            android:background="@drawable/layout_listitem"
            android:src="@drawable/n_icoyes"/>


    </LinearLayout>

    <FrameLayout
        android:background="@color/TransparentBlack"
        android:id="@+id/dlg_container"
        android:visibility="gone"
        tools:visibility="visible"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



</RelativeLayout>
