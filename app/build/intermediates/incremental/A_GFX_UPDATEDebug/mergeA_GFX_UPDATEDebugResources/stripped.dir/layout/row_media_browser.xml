<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/lblTrackName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/media_row_text"
        android:maxLines="1"
        android:gravity="center_vertical"
        tools:text="Track Name"/>

    <ImageButton
        android:id="@+id/btnTrackPreview"
        android:layout_width="@dimen/media_row_button_width"
        android:layout_height="@dimen/media_row_button_height"
        android:background="@drawable/layout_listitem"
        android:src="@drawable/n_icoplay"/>

    <ImageButton
        android:id="@+id/btnTrackSelect"
        android:layout_width="@dimen/media_row_button_width"
        android:layout_height="@dimen/media_row_button_height"
        android:scaleType="centerInside"
        android:background="@drawable/layout_listitem"
        android:src="@drawable/n_icoyes"/>

    <ImageButton
        android:id="@+id/btnTrackDelete"
        android:layout_width="@dimen/media_row_button_width"
        android:layout_height="@dimen/media_row_button_height"
        android:scaleType="centerInside"
        android:background="@drawable/layout_listitem"
        android:src="@drawable/n_icono"/>

</LinearLayout>
