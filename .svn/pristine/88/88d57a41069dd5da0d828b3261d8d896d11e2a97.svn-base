<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/n_appbackground"
    style="@style/Root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JobScreen" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <LinearLayout
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/frmJob_btnMenu"
                    android:tag="SAFETY"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="@dimen/action_ico"
                    android:layout_height="@dimen/action_ico"
                    android:layout_gravity="left"
                    android:background="@drawable/layout_listitem"
                    android:src="@drawable/n_icomenu" />

                <ImageButton
                    android:id="@+id/frmJob_btnPay"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:tag="SAFETY"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="@dimen/action_ico"
                    android:layout_height="@dimen/action_ico"
                    android:layout_gravity="left"
                    android:scaleType="fitCenter"
                    android:background="@drawable/layout_listitem"
                    android:src="@drawable/n_ico_card" />

                <ImageButton
                    android:id="@+id/frmJob_btnMeter"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:tag="SAFETY"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_width="@dimen/action_ico"
                    android:layout_height="@dimen/action_ico"
                    android:layout_gravity="left"
                    android:scaleType="fitCenter"
                    android:background="@drawable/layout_listitem"
                    android:src="@drawable/n_ico_meter" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/fragFairMeter"
                android:background="@color/meter_background"
                tools:layout_height="64dp"
                android:visibility="visible"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <RelativeLayout
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ViewFlipper
                    android:id="@+id/frmJob_ViewFlipper"
                    android:layout_marginLeft="@dimen/jobdetail_vertical_margin"
                    android:layout_marginRight="@dimen/jobdetail_vertical_margin"
                    android:layout_marginTop="@dimen/jobdetail_horizontal_margin"
                    android:layout_marginBottom="@dimen/jobdetail_horizontal_margin"
                    tools:background="#22FFFF00"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageButton
                    android:id="@+id/frmJob_btnPlay"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:background="@null"
                    android:src="@drawable/n_icoplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

            <LinearLayout
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:id="@+id/frmJob_layoutSafetyPanel"
                android:tag="SAFETY"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/bottom_buttons_height"
                android:orientation="horizontal" >


               <LinearLayout
                   android:orientation="horizontal"
                   android:id="@+id/frmJob_btnJobButton"
                   android:layout_width="0dp"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_gravity="center"
                   android:padding="@dimen/job_button_padding"
                   tools:background="@color/Aqua"
                   android:background="@null">

                   <ImageView
                       android:src="@drawable/n_battery_critica_chargel"
                       android:layout_weight="30"
                       android:layout_width="0dp"
                       android:layout_height="match_parent" />

                   <TextView
                       tools:text="STC"
                       android:textSize="10dp"
                       android:gravity="center"
                       android:textColor="@color/Black"
                       android:maxLines="1"
                       android:layout_width="0dp"
                       android:layout_weight="70"
                       android:layout_height="match_parent" />

               </LinearLayout>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="match_parent" />

                <RelativeLayout
                    android:id="@+id/frmJob_btnPanic"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@null">

                    <!--
                    Dummy button so we can get autosized text
                    -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:padding="@dimen/job_button_padding"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:src="@drawable/alert"
                            android:layout_weight="30"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/lblDummyButton"
                            android:text="OOOOOO"
                            android:gravity="center"
                            android:maxLines="1"
                            android:autoSizeTextType="uniform"
                            android:textColor="@color/Black"
                            android:layout_width="0dp"
                            android:layout_weight="70"
                            android:layout_height="match_parent" />

                    </LinearLayout>


                    <LinearLayout
                        tools:visibility="visible"
                        android:background="@color/button_background_panic_disarmed"
                        android:padding="@dimen/job_button_padding"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                        android:src="@drawable/ico_btn_panic"
                        android:layout_weight="30"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:text="@string/btn_panic_text"
                        android:textSize="10dp"
                        android:gravity="center"
                        android:maxLines="1"
                        android:textColor="@color/Black"
                        android:layout_width="0dp"
                        android:layout_weight="70"
                        android:layout_height="match_parent" />

                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>


        <FrameLayout
            android:background="@color/TransparentBlack"
            android:id="@+id/dlg_container"
            android:visibility="gone"
            tools:visibility="invisible"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>



</LinearLayout>
