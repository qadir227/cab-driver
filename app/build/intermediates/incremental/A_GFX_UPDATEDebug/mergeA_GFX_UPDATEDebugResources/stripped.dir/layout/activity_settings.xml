<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Root"
    android:id="@+id/frmSettings_base"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin" >
            
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        
        	<ImageButton
                    android:id="@+id/frmSettings_btnBack"
                    android:layout_gravity="right"
                    android:layout_width="@dimen/back_ico"
                    android:layout_height="@dimen/back_ico"
                    android:background="@drawable/layout_listitem"
                android:tint="@color/colorPrimary"
                    android:src="@drawable/n_icoback" />
        
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent"
		        android:gravity="center"
		        android:text="Settings"
		        android:textSize="@dimen/activity_title"/>
    
    </LinearLayout>
            
            <ViewFlipper
                android:id="@+id/frmSettings_flip"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                
                     <!--
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
	                <fragment
		                android:id="@+id/fragSettings_officenumber"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        class="com.cabdespatch.driverapp.fragments.settings.OfficeNumber"
				        tools:layout="@layout/fragment_settings_officenumber" />
                
	            <fragment
		                android:id="@+id/fragSettings_voiceMode"
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="@dimen/activity_horizontal_margin"
				        class="com.cabdespatch.driverapp.fragments.settings.VoiceMode"
				        tools:layout="@layout/fragment_settings_voicemode" /> 
                
                </LinearLayout>
                 -->

                <LinearLayout
                    android:id="@+id/uniqueID0"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <fragment
                        android:id="@+id/uniqueID1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        class="com.cabdespatch.driverapp.beta.fragments.settings.Display"
                        tools:layout="@layout/fragment_settings_display"/>

                    <fragment
                        android:id="@+id/uniqueID2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        class="com.cabdespatch.driverapp.beta.fragments.settings.TaxiMeter"
                        tools:layout="@layout/fragment_settings_meter"/>

                </LinearLayout>

                 
                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    class="com.cabdespatch.driverapp.beta.fragments.settings.DefaultNavLocation"
                    tools:layout="@layout/fragment_settings_navlocation"/>
                
                <fragment
				        android:layout_width="match_parent"
				        android:layout_height="match_parent"
				        android:layout_marginTop="@dimen/activity_horizontal_margin"
				        class="com.cabdespatch.driverapp.beta.fragments.settings.RunMode"
				        tools:layout="@layout/fragment_settings_runmode" />

                <fragment
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    class="com.cabdespatch.driverapp.beta.fragments.settings.JobScreenStart"
                    tools:layout="@layout/fragment_settings_job_screen_start" />
                
            </ViewFlipper>
            
        </LinearLayout>

</LinearLayout>
