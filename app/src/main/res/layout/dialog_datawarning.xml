<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:src="@drawable/n_appbackground"
        android:scaleType="fitXY"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignLeft="@+id/actualcontent"
        android:layout_alignRight="@id/actualcontent"
        android:layout_alignTop="@id/actualcontent"
        android:layout_alignBottom="@id/actualcontent"/>

    <LinearLayout
        android:id="@+id/actualcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dialog_horizontal_padding"
        android:paddingLeft="@dimen/dialog_vertical_padding"
        android:paddingRight="@dimen/dialog_vertical_padding">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">


            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:paddingTop="@dimen/dialog_horizontal_padding"
                android:paddingBottom="@dimen/dialog_horizontal_padding"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/dlg_msgbox_lblMessage"
                        android:text="@string/data_usage_warning"
                        android:textSize="@dimen/dialog_content"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_horizontal_margin"/>

                    <CheckBox
                        android:id="@+id/dlg_datawarning_chkUnderstood"
                        android:text="@string/i_understand"
                        android:layout_gravity="right"
                        android:textSize="@dimen/dialog_prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/activity_horizontal_margin"/>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>


        <ImageButton
            android:id="@+id/dlg_datawarning_btnOk"
            android:layout_width="@dimen/yesno_ico_width"
            android:layout_height="@dimen/yesno_ico_height"
            android:layout_gravity="right"
            android:scaleType="centerInside"
            android:background="@drawable/layout_listitem"
            android:src="@drawable/n_icoyes"/>


    </LinearLayout>
</RelativeLayout>