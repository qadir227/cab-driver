<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Root"
    android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/frmDriverMessage_base"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DriverMessage" >
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <ImageButton
		  	    android:id="@+id/frmDriverMessage_btnBack"
                android:visibility="invisible"
                tools:visibility="visible"
		    	android:background="@drawable/layout_listitem"
		      	android:src="@drawable/n_icoback"
                android:tint="@color/colorPrimary"
		      	android:layout_width="@dimen/back_ico"
		      	android:layout_height="@dimen/back_ico"
		      	android:scaleType="centerInside"
		      	android:layout_gravity="right"/>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Message"
                android:textSize="@dimen/activity_title"
                android:gravity="center"/>
            
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    		
            <ScrollView
                android:id="@+id/frmDriverMessage_scroller"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fillViewport="true">
                
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/frmDriverMessage_lblMessage"
                        android:clickable="true"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hello"/>

                    <ImageButton
                        android:id="@+id/frmDriverMessage_btnConfirm"
                        android:visibility="invisible"
                        tools:visibility="visible"
                        android:layout_gravity="right"
                        android:layout_width="@dimen/yesno_ico_width"
                        android:layout_height="@dimen/yesno_ico_height"
                        android:scaleType="centerInside"
                        android:background="@drawable/layout_listitem"
                        android:src="@drawable/n_icoyes"/>

                </LinearLayout>

            </ScrollView>


        <TextView
            android:id="@+id/frmDriverMessage_lblCountDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textSize="48sp"
            android:text="30"/>
               
	</RelativeLayout>
        
</LinearLayout>
    
