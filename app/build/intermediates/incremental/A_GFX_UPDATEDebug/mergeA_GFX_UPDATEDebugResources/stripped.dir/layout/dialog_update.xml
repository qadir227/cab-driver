<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/dialog_style"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:background="@drawable/n_appbackground"
        android:scaleType="fitXY"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignLeft="@+id/actualcontent"
        android:layout_alignRight="@id/actualcontent"
        android:layout_alignTop="@id/actualcontent"
        android:layout_alignBottom="@id/actualcontent"/>

    <LinearLayout
        android:id="@+id/actualcontent"
        android:paddingBottom="@dimen/dialog_vertical_margin"
        android:paddingLeft="@dimen/dialog_horizontal_margin"
        android:paddingRight="@dimen/dialog_horizontal_margin"
        android:paddingTop="@dimen/dialog_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >


                <ProgressBar
                    android:layout_gravity="top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/dlgUpdate_lblProgress"
                android:text="@string/downloading_update"
                android:paddingLeft="@dimen/dialog_horizontal_margin"
                android:textSize="@dimen/dialog_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center"/>

        </LinearLayout>

</RelativeLayout>