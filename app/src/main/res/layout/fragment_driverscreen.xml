<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Root"
    xmlns:tools="http://schemas.android.com/tools"
  	tools:background="@drawable/n_appbackground"
    android:id="@+id/frmDriver_base"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:visibility="visible" >


    <LinearLayout
        android:tag="safe_hide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_width="@dimen/action_ico"
                android:layout_height="@dimen/action_ico">

                <ImageButton
                    android:id="@+id/frmDriver_btnMenu"
                    android:visibility="gone"
                    android:tag="SAFETY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/layout_listitem"
                    android:src="@drawable/n_icomenu" />

                <ProgressBar
                    android:id="@+id/frmDriver_prgMenuHider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>



            <RadioGroup
                android:tag="SAFETY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/activity_horizontal_margin">

                <RadioButton
                    android:id="@+id/frmDriver_btnShowCars"
                    android:textColor="@color/Black"
                    android:layout_margin="0dp"
                    android:padding="4dp"
                    android:button="@android:color/transparent"
                    android:background="@drawable/radio_carsjobs"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Cars"/>

                <RadioButton
                    android:id="@+id/frmDriver_btnShowBids"
                    android:textColor="@color/Black"
                    android:layout_margin="0dp"
                    android:padding="4dp"
                    android:button="@android:color/transparent"
                    android:background="@drawable/radio_carsjobs"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Work Now"/>

                <RadioButton
                    android:button="@android:color/transparent"
                    android:textColor="@color/Black"
                    android:id="@+id/frmDriver_btnShowFutureJobs"
                    android:background="@drawable/radio_carsjobs"
                    android:layout_margin="0dp"
                    android:padding="4dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Future Work"/>

            </RadioGroup>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <ViewFlipper
                android:id="@+id/frmDriver_flip"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ListView
                    android:id="@+id/frmDriver_lstWorkAvaliable"
                    android:cacheColorHint="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ListView
                    android:id="@+id/frmDriver_lstCarsAvaliable"
                    android:cacheColorHint="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">

                    <ProgressBar
                        android:id="@+id/frmDriver_prgFutureJobs"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    <ListView
                        android:id="@+id/frmDriver_lstFutureJobs"
                        android:cacheColorHint="@null"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>

            </ViewFlipper>

            <ImageButton
                android:src="@drawable/n_ico3g"
                android:id="@+id/btnMeter"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>



        <LinearLayout
            android:id="@+id/frmDriver_layoutSafetyPanel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >



            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/frmDriver_btnJobButton"
                    android:tag="SAFETY"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:enabled="false"
                    android:scaleType="fitXY"
                    android:src="@drawable/btn_jplot" />

                <FrameLayout
                    android:id="@+id/lay_onRank"
                    tools:visibility="visible"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/colorPrimary"
                    android:layout_alignLeft="@id/frmDriver_btnJobButton"
                    android:layout_alignRight="@id/frmDriver_btnJobButton"
                    android:layout_alignTop="@id/frmDriver_btnJobButton"
                    android:layout_alignBottom="@id/frmDriver_btnJobButton">

                    <TextView
                        android:text="@string/on_rank"
                        android:gravity="center"
                        android:textColor="@color/Black"
                        android:textSize="@dimen/on_rank_prompt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                </FrameLayout>

            </RelativeLayout>

            <ImageButton
                android:id="@+id/frmDriver_btnPanic"
                android:tag="SAFETY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/btn_panic" />


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:tag="safe_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Red"
            android:gravity="center"
            android:textSize="60dp"
            android:text="@string/safety_panel_text"/>

    </LinearLayout>


</LinearLayout>