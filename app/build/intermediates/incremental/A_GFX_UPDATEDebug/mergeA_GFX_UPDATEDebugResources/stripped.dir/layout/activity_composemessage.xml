<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frmCompose_base"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="12dip" >

    <!--
    <fragment
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.cabdespatch.driverapp.beta.fragments.StatusBar"
        android:tag="androidsucks1234"
        tools:layout="@layout/fragment_statusbar" />
        -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
    	android:paddingLeft="@dimen/activity_horizontal_margin"
    	android:paddingRight="@dimen/activity_horizontal_margin"
    	android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">
        
        <LinearLayout
            android:id="@+id/compose_message_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="horizontal">
            
            <ImageButton
		         android:id="@+id/frmCompose_btnBack"
		         android:layout_alignParentRight="true"
		         android:layout_width="@dimen/back_ico"
		         android:layout_height="@dimen/back_ico"
		         android:background="@drawable/layout_listitem"
		         android:layout_gravity="right"
				android:tint="@color/colorPrimary"
		         android:src="@drawable/n_icoback" />
            
            <TextView
		        android:layout_width="0dp"
                android:layout_weight="1"
		        android:layout_height="fill_parent"
		        android:gravity="center"
		        android:text="Send Message"
		        android:textSize="@dimen/activity_title"/>

            
        </LinearLayout>
    
	    <ViewFlipper
	        android:id="@+id/frmCompose_flip"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1">

            <ListView
                android:id="@+id/frmCompase_lstPresets"
                android:cacheColorHint="@null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/frmCompose_chkSave"
                    android:button="@drawable/chk_fave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"/>

                <EditText
                    android:id="@+id/frmCompose_txtCustomMessage"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="bottom"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/frmCompose_btnSendMessage"
                    android:src="@drawable/n_icoyes"
                    android:background="@drawable/layout_listitem"
                    android:layout_width="@dimen/yesno_ico_width"
                    android:layout_height="@dimen/yesno_ico_height"
                    android:scaleType="centerInside"
                    android:layout_gravity="right"/>


            </LinearLayout>
	    </ViewFlipper>

		<!-- this button is not actually used -->
		<ImageButton
			android:id="@+id/frmCompose_btnShare"
			android:visibility="gone"
			tools:visibility="visible"
            android:focusable="true"
            android:focusableInTouchMode="true"
			android:src="@drawable/n_icosendmessage"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
    
	</LinearLayout>
	        
</LinearLayout>