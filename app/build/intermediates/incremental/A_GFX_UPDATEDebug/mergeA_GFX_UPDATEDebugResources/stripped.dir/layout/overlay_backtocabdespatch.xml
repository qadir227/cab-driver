<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="#00FFFFFF"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/button"
        android:src="@drawable/big_icon"
        android:scaleType="centerInside"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/overlay_margin_leftright"
        android:layout_marginBottom="@dimen/overlay_margin_topbottom"
        android:layout_width="@dimen/overlay_button_width"
        android:layout_height="@dimen/overlay_button_height"/>


</RelativeLayout>