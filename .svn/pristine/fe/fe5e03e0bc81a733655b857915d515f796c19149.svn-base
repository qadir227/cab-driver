<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
          android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
              tools:padding="16dp"
              tools:background="@drawable/n_appbackground"
            xmlns:tools="http://schemas.android.com/tools">

        <LinearLayout
            android:id="@+id/msgitemheader"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:id="@+id/msgitemcount"
                tools:text="(1/1)"
                android:textSize="@dimen/view_message_header"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/msgitemdetails"
                tools:text="received at 19:48 \n on 17/01/2001 "
                android:textSize="@dimen/view_message_header"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"/>

        </LinearLayout>


    <ScrollView
        android:id="@+id/scroller"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <TextView
            android:layout_below="@id/msgitemheader"
            android:id="@+id/messageitem_messagetext"
            android:paddingTop="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            tools:text="Please make sure you remember to log off when your shift ends"
            android:gravity="top|center"
            android:textSize="@dimen/view_message_text_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </ScrollView>




</LinearLayout>
