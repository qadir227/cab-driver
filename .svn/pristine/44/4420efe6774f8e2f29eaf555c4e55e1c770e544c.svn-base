<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="#FFFFFF"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/notification_icon"
        android:layout_height="@dimen/notification_icon"
        android:layout_marginRight="@dimen/notification_margin_lr"
        android:layout_marginLeft="@dimen/notification_margin_lr"
        android:layout_marginTop="@dimen/notification_margin_tb"
        android:layout_marginBottom="@dimen/notification_margin_tb"
        android:background="@drawable/big_icon"/>

    <LinearLayout
        android:background="@drawable/n_yellowbase"
        android:paddingRight="@dimen/notification_margin_lr"
        android:paddingLeft="@dimen/notification_margin_lr"
        android:paddingTop="@dimen/notification_margin_tb"
        android:paddingBottom="@dimen/notification_margin_tb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/notification_title"
        tools:text="title"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="@dimen/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/notification_content"
        android:textColor="#000000"
        tools:text="content"
        android:textStyle="italic"
        android:textSize="@dimen/notification_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>